<!DOCTYPE html>
<html>
<head>
  <title>Edit Room</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include('../partials/header') %>

<div class="container form-container">
  <h1>Edit Room #<%= room.room_number %></h1>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form method="POST" action="/admin/rooms/<%= room.id %>/edit" class="form-box">

    <label>Room Type</label>
    <select name="room_type" required>
      <option value="Standard" <%= room.room_type === 'Standard' ? 'selected' : '' %>>Standard</option>
      <option value="Deluxe" <%= room.room_type === 'Deluxe' ? 'selected' : '' %>>Deluxe</option>
      <option value="Suite" <%= room.room_type === 'Suite' ? 'selected' : '' %>>Suite</option>
    </select>

    <label>Price per night</label>
    <input
      type="number"
      step="0.01"
      name="price_per_night"
      value="<%= room.price_per_night %>"
      required
    />

    <label>Status</label>
    <select name="status">
      <option value="available" <%= room.status === 'available' ? 'selected' : '' %>>Available</option>
      <option value="booked" <%= room.status === 'booked' ? 'selected' : '' %>>Booked</option>
    </select>

    <button type="submit">Update Room</button>
  </form>

  <form
    method="POST"
    action="/admin/rooms/<%= room.id %>/delete"
    onsubmit="return confirm('Delete this room permanently?');"
  >
    <button class="danger-btn">Delete Room</button>
  </form>

  <a href="/admin/dashboard">â¬… Back</a>
</div>

<%- include('../partials/footer') %>

<style>
    .form-container {
  max-width: 500px;
  margin: 60px auto;
}

.form-box {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.form-box input,
.form-box select {
  padding: 10px;
}

.form-box button {
  padding: 10px;
  background: #333;
  color: white;
  border: none;
  cursor: pointer;
}

.danger-btn {
  margin-top: 10px;
  background: #c0392b;
  color: white;
  padding: 10px;
  border: none;
  cursor: pointer;
}

.error {
  color: red;
}

</style>

</body>
</html>
